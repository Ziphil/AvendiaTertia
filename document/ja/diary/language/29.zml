        \li|punc=","|<\sh<[,]>>
        \li<\sh<{ὦ}>\bs<>\ex<>>
        \li<\sh<{ἄνδρες}>\bs<>\ex<>>
        \li<\sh<{Ἀθηναῖοι}>\bs<>\ex<>>
        \li|punc=","|<\sh<[,]>>
        \li<\sh<{κεκαλλιεπημένους}>\bs<{καλλιεπέομαι}>\ex<美辞麗句で述べる\mph<|分.中.完.男.複.対>>>
        \li<\sh<{γε}>\bs<>\ex<>>
        \li<\sh<{λόγους}>\bs<{λογός}>\ex<演説\mph<|複.対>>>
