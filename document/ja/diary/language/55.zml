        \li<\sh<\cn|name="LI"|<𒇷>>\ex<[li]>>
        \li<\sh<\cn|name="ŠU"|<𒋗>>\ex<[šu]>>
        \li<\sh<\cn|name="A2"|<𒀉>>\ex<[id]>>
        \li<\sh<\cn|name="DI"|<𒁲>>\ex<[di]>>
