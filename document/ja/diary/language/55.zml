        \li<\sh<\cn|name="LAM"|<𒇴>>\ex<[lam]>>
        \li<\sh<\cn|name="U2"|<𒌑>>\ex<[u]\sub<2>>>
        \li<\sh<\cn|name="UB"|<𒌒>>\ex<[ub]>>
