    \table<
      \caption<{aḫāzum} (G-1a 語幹)>
      \tr<\th;\th|col="2"|<継>>
      \tr<\th<三.単>\td<{iḫḫaz}>>
      \tr<\th<二.男.単>\td<{taḫḫaz}>>
      \tr<\th<二.女.単>\td<{taḫḫazī}>>
      \tr<\th<一.単>\td<{aḫḫaz}>>
