        \li<\sh<{εἰς}>\bs<{εἰς}>\ex<～の方へ>>
        \li<\sh<{φαῦσιν}>\bs<{φαῦσις}>\ex<輝き\mph<|単.対>>>
        \li<\sh<{ἐν}>\bs<{ἐν}>\ex<～の中で>>
