    \tr<\th<二.赤>\td<{секте̄п}>\td<{седо̄кте̄п}>\td<{секте̄пан}>\td<{седо̄кте̄пан}>>
    \tr<\th<二.青>\td<{сокте̄по}>\td<{содо̄кте̄по}>\td<{сокте̄пно}>\td<{содо̄кте̄пно}>>
    \tr<\th<一複.赤>\td<{бамекте̄п}>\td<{бандо̄кте̄п}>\td<{бамекте̄пан}>\td<{бандо̄кте̄пан}>>
    \tr<\th<一複.青>\td<{бамокте̄по}>\td<{бандо̄кте̄по}>\td<{бамокте̄пно}>\td<{бандо̄кте̄пно}>>
