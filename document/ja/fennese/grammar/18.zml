    \tr<\th;\th<\mk;[-а], \mk;[-аъ]>\th<\mk;[-е], \mk;[-еъ]>\th<\mk;[-и], \mk;[-иъ]>\th<\mk;[-о], \mk;[-оъ]>\th<\mk;[-у], \mk;[-уъ]>>
