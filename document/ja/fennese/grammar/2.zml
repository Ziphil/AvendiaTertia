    \tr<\th;\th<赤.用>\th<青.用>\th<赤.体>\th<青.体>\th<赤.接>\th<青.接>>
    \tr<\th<主>\td<\mk;∅>\td<\mk;[-о]>\td<\mk;[-ев]>\td<\mk;[-ов]>\td<\mk;[-е]>\td<\mk;[-о]>>
    \tr<\th<対>\td<\mk;[-а]>\td<\mk;[-а]>\td<\mk;[-ав]>\td<\mk;[-ав]>\td<\mk;[-а]>\td<\mk;[-а]>>
    \tr<\th<与>\td<\mk;[-еҫ]>\td<\mk;[-оҫ]>\td<\mk;[-еваҫ]>\td<\mk;[-оваҫ]>\td<\mk;[-е]>\td<\mk;[-о]>>
