    \tr<\th<主.不定>\td<\mk;\rd<[К]>[ө̄]\rd<[Т]>[а]\rd<[П]>>\td<\mk;\rd<[К]>[ө̄]\rd<[Т]>[а̷]\rd<[П]>[о]>\td<\mk;\rd<[К]>[ө̄]\rd<[Т]>[а̷]\rd<[П]>[ев]>\td<\mk;\rd<[К]>[ө̄]\rd<[Т]>[а̷]\rd<[П]>[ов]>>
