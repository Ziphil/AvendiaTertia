      \tr<\th<長.対>\td<{хасо̄ка}>\td<{хасо̄ка}>\td<{хасо̄кав}>\td<{хасо̄кав}>>
      \tr<\th<長.与>\td<{хесо̄кес}>\td<{хосо̄кес}>\td<{хесо̄кевас}>\td<{хосо̄кевас}>>
      \tr<\th<長.奪>\td<{хесо̄кезам}>\td<{хосо̄козам}>\td<{хесо̄кевзам}>\td<{хосо̄ковзам}>>
      \tr<\th<長.具>\td<{хесо̄ко̄т}>\td<{хосо̄кӯт}>\td<{хесо̄кеват}>\td<{хосо̄коват}>>
