      \tr<\th<奪>\td<{тозамак}>>
      \tr<\th<具>\td<{тӯтак}>>
      \tr<\th<処>\td<{теак}>>
    >
    \table<
      \caption<{теддии}>
      \tr<\th<与>\td<{теддеси}>>
      \tr<\th<奪>\td<{теддезами}>>
      \tr<\th<処>\td<{теддии}>>
