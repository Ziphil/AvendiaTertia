      \tr<\th<長.対>\td<{хе̂са}>\td<{хе̂са}>\td<{хе̂сав}>\td<{хе̂сав}>>
      \tr<\th<長.与>\td<{хе̂сес}>\td<{хе̂сос}>\td<{хе̂севас}>\td<{хе̂совас}>>
      \tr<\th<長.奪>\td<{хе̂сезам}>\td<{хе̂созам}>\td<{хе̂севзам}>\td<{хе̂совзам}>>
      \tr<\th<長.具>\td<{хе̂со̀т}>\td<{хе̂су̀т}>\td<{хе̂севат}>\td<{хе̂соват}>>
      \tr<\th<長.処>\td<{хе̂си}>\td<{хе̂се}>\td<{хе̂севе}>\td<{хе̂сове}>>
    >
    \table<
      \caption<{и̂с}「この人」>
      \tr<\th;\th<赤.用>\th<青.用>\th<赤.体>\th<青.体>>
      \tr<\th<長.主>\td<{и̂с}>\td<{и̂со}>\td<{и̂сев}>\td<{и̂сов}>>
      \tr<\th<長.対>\td<{и̂са}>\td<{и̂са}>\td<{и̂сав}>\td<{и̂сав}>>
      \tr<\th<長.与>\td<{и̂сес}>\td<{и̂сос}>\td<{и̂севас}>\td<{и̂совас}>>
      \tr<\th<長.奪>\td<{и̂сезам}>\td<{и̂созам}>\td<{и̂севзам}>\td<{и̂совзам}>>
      \tr<\th<長.具>\td<{и̂со̀т}>\td<{и̂су̀т}>\td<{и̂севат}>\td<{и̂соват}>>
      \tr<\th<長.処>\td<{и̂си}>\td<{и̂се}>\td<{и̂севе}>\td<{и̂сове}>>
