    \tr<\th<長.対>\td<{бамма}>\td<{бамма}>\td<{баммар}>\td<{баммар}>>
    \tr<\th<長.与>\td<{баммес}>\td<{баммос}>\td<{баммерас}>\td<{бамморас}>>
    \tr<\th<長.奪>\td<{баммезам}>\td<{баммозам}>\td<{баммерзам}>\td<{бамморзам}>>
    \tr<\th<長.具>\td<{баммо̄т}>\td<{баммӯт}>\td<{баммеррат}>\td<{бамморрат}>>
